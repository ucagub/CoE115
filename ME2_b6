}

long int absolute(long int value) {
    /** my implementation of absolute value*/
    if (value < 0) {
      return -value;
    }
    else {
      return value;  
    }
}



void resetKey() {
    /**resets the key press detected*/
    col_press_id = 0;
    row_press_id = 0;
    return;
}

void getTimeUpdate(int time[], int freq) {
    /**adds the time freq to the current time*/
    
    if((time[0] + freq) <= 59) {
        time[0] = time[0] + freq;
    } else {
        if((time[1] + 1) <= 59) {
            time[1]++;
        } else {
            if((time[2] + 1) <= 23) {
                time[2]++;
            } else {
                if((time[3] + 1) <= 31) {
                    time[3]++;
                } else {
                    time[3] = 1; 
                }
            }
        }
        time[0] = (time[0] + freq) % 60;
    }
    return;
}
void dataLogMode(int time[], int freq, int logTrack[]) {
    
    
    float current_temp = 0;
    int key = 0;
    int adrs = 0;
    float adcfloat = 0;
    unsigned long int count = 0;
    int count2 = 0;
    int repeat = 0;     //repeat flag
    resetKey();
    getTimeFromRTC(time);
    
    
    
    
    current_temp = adcvalue*33.5/102.4;
    printData(time, current_temp);
    print_char(" L");
    while(1) {
        for(count2=300; count2>0; count2--) {
            for(count=freq*119; count>0; count--) {
                if((count2==1) && (!repeat)) {    
                    getTimeUpdate(time, freq);
                    current_temp = adcvalue*33.5/102.4;
                    writeData(time, current_temp, logTrack);
                    printData(time, current_temp);
                    print_char(" ");
                    print_long(time[0]);
                    print_char("L");
                    repeat = 1;
                }
                
                if(!(count2==1)) {
                    repeat = 0;
                }
                
                key = get_key_press();
                
                if(key==11) {
                    return;
                }
            }
        }
    }
}

void getTimeDum(int time[]) {
    /**used to get sample time for testing
      *just adds a minute to the previous time
      */
    
    if((time[1] + 1) < 60) {
        time[1]++;
    } else if((time[2] + 1) < 24) {
        time[1] = 0;
        time[2]++; 
    } else {
        time[1] = 0;
        time[2] = 0;
    }
    return;
}

int valiDate(int time[]) {
    /**checks if the time from read from eeprom is valid
     * if time is not valid then so is the Data point
     * assumes input is in main time format
     * returns 1 if valid else 0;
     */
    int valid = 1;
    

    if((!(time[1] >= 0)) && (!(time[1] <= 59))) {
        valid = 0;
    }
    if((!(time[2] >= 0)) && (!(time[2] <= 23))) {
        valid = 0;
    }
    if((!(time[4] >= 1)) && (!(time[4] <= 31))) {
        valid = 0;
    }
    if((!(time[5] >= 1)) && (!(time[5] <= 12))) {
        valid = 0;
    }
    if((!(time[6] >= 0)) && (!(time[6] <= 9999))) {
        valid = 0;
    }
    
    return valid;
}

int leftOlder(int leftDate[], int rightDate[]) {
    /**returns 1 if leftDate is Older or if same date
     * returns 0 if rightDate is Older
     */
    int ind = 0;
    for(ind=6; ind>=0; ind--) {
        if((leftDate[ind] - rightDate[ind]) < 0) {
            return 1;
        } else if((leftDate[ind] - rightDate[ind]) > 0) {
            return 0;
        }
    }
    
    return 1;
}

void copyDate(int toDate[], int fromDate[]){
    int ind = 0;
    
    for(ind=0; ind<7; ind++) {
        toDate[ind] = fromDate[ind];
    }

}

void setLogTrack(int logTrack[], int lastAdrs) {
    /**search for the oldest and newest log using linear search*/
    int timeLatest[7] = {0};
    int timeBuff[7] = {0};
    int timeOldest[7] = {0};
    float temp[1] = {0};
    int adrsLatest = 0;
    int adrsBuff = 8;
    int adrsOldest = 0;
    
    
    
    readData(timeLatest, temp, adrsLatest);
    copyDate(timeOldest, timeLatest);
    //search for newest and oldest  log
    while(adrsBuff <= lastAdrs) {
        
        readData(timeBuff, temp, adrsBuff);
        
        if(leftOlder(timeLatest, timeBuff)) {
            copyDate(timeLatest, timeBuff);
            adrsLatest = adrsBuff;
        } else if(leftOlder(timeBuff, timeOldest)) {
            copyDate(timeOldest, timeBuff);
            adrsOldest = adrsBuff;
        }
        adrsBuff = adrsBuff + 8;
    }
    //its wrong but somehow it works
    logTrack[1] = adrsLatest;
    logTrack[0] = adrsOldest;
    return;
}

void eepromInit(int logTrack[]) {
    /**checks the contents of the eeprom
     * search for newest and oldest log
     */
    int time[7] = {0};
    float temp[1] = {0};
    int adrs = 0;
    int valid = 0; //valid flag
    //read data until valid
    
    do{
        readData(time, temp, adrs);
        valid = valiDate(time);
        adrs = adrs + 8;
    }while(valid && (adrs<800));

    if(adrs == 800) {
        eepromFull = 1;
    }
    
    if(adrs != 8) {
        setLogTrack(logTrack, (adrs - 8));
    }
    
    return;
}

