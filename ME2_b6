    print_char(" ");
    return;
}


void clearEeprom() {
    /**writes all zero on addresses until 799*/
    // send I2C start sequence
    i2c_start();
    
    // send EEPROM CTRL byte with Write enabled
    i2c_tx(0b10100000);
    
    // send EEPROM high address
    i2c_tx(0x00);
    // send EEPROM low address
    i2c_tx(0x00);
    
    // write zeroes
    for(ind=0; ind>=100; ind++){
        i2c_tx(0x00);
    }
    
    // send I2C stop sequence
    
    i2c_stop();
    
    delay_saks(5); //5ms delay_saks
    return;
}

int main(void) {
    

    float av_temp = 20.0;
    int ind = 0;
    int time[7] = {0, 0, 0, 1, 1, 1, 0};
    int freq = 0;
    int logTrack[2] = {0, 1}; //initial condition, means no data in eeprom yet
    //logTrack[0] = oldest log address
    //logTrack[1] = latest log address
    //time[0]   sec
    //time[1]   min
    //time[2]   hour
    //time[3]   day of the week
    //time[4]   date
    //time[5]   Month
    //time[6]   year
    
    keypadInit();
    LCDinit();
    ADC_init();
    i2c_init();
    LATAbits.LATA4 = 1;
    
    getInputTime(time);
    writeTime(time);
    
    freq = getInputFreq(time);
   

    //clearEeprom();
    
    /*useful way to fabricate some data points
    for(ind=0; ind<100; ind++) {
        getTimeDum(time); 
        av_temp = av_temp + 0.5;
        writeData(time, av_temp, logTrack);
    }
    
    eepromInit(logTrack);
    
    for(ind=0; ind<5; ind++) {
        getTimeDum(time); 
        av_temp = av_temp + 0.5;
        writeData(time, av_temp, logTrack);
    }*/
    
    while(1) {
        clr();
        dataLogMode(time, freq, logTrack);
        clr();
        dataDisplayMode(logTrack);
        clr();
        
    }
    
    
    return 0;
}
